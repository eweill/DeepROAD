#!/bin/bash

if [ "$1" == "add" ]; then
    print "Adding all modules for Palmetto execution."
    # Modules
    module purge
    module add gcc/4.8.1 anaconda/4.0.0
    module add cuda-toolkit/7.5.18 opencv/2.4.9
    module add ffmpeg/2.4
    
elif [ "$1"== "remove" ]; then
    print "Removing all modules for Palmetto execution."
    module purge
    
else
    print "Unrecognized command line arguments."
fi